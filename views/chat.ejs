<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat - Whisp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="chat-page">
  <div class="container-fluid h-100">
    <div class="row h-100">
      <!-- Sidebar -->
      <div class="col-md-4 col-lg-3 px-0 sidebar" id="sidebar">
        <div class="d-flex flex-column h-100">
          <!-- Header -->
          <div class="sidebar-header p-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-0">Whisp</h5>
                <small class="text-muted">@<%= currentUser.username %></small>
              </div>
              <a href="/logout" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-box-arrow-right"></i>
              </a>
            </div>
          </div>

          <!-- Users list -->
          <div class="users-list flex-grow-1 overflow-auto">
            <div class="p-2">
              <h6 class="px-2 text-muted small mb-2">USERS</h6>
              <% if (users.length === 0) { %>
                <p class="text-muted text-center small mt-4">No users available</p>
              <% } else { %>
                <% users.forEach(user => { %>
                  <div class="user-item p-2 rounded mb-1" data-user-id="<%= user._id %>" data-username="<%= user.username %>">
                    <div class="d-flex align-items-center">
                      <div class="avatar me-2">
                        <%= user.username.charAt(0).toUpperCase() %>
                      </div>
                      <div class="flex-grow-1">
                        <div class="user-name"><%= user.username %></div>
                      </div>
                      <span class="unread-badge badge bg-primary rounded-pill d-none">0</span>
                    </div>
                  </div>
                <% }); %>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Chat area -->
      <div class="col-md-8 col-lg-9 px-0 chat-area">
        <div class="d-flex flex-column h-100">
          <!-- Chat header -->
          <div class="chat-header p-3 border-bottom d-none">
            <div class="d-flex align-items-center">
              <button class="btn btn-link d-md-none me-2" id="backBtn">
                <i class="bi bi-arrow-left"></i>
              </button>
              <div class="avatar me-2" id="chatAvatar">U</div>
              <div>
                <h6 class="mb-0" id="chatUsername">Select a user</h6>
                <small class="text-muted" id="typingIndicator"></small>
              </div>
            </div>
          </div>

          <!-- Messages -->
          <div class="messages flex-grow-1 overflow-auto p-3" id="messagesContainer">
            <div class="text-center text-muted mt-5">
              <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
              <p class="mt-3">Select a user to start chatting</p>
            </div>
          </div>

          <!-- Message input -->
          <div class="message-input p-3 border-top d-none" id="messageInputArea">
            <form id="messageForm">
              <div class="input-group">
                <input type="text" class="form-control" id="messageInput" placeholder="Type a message..." autocomplete="off">
                <button class="btn btn-primary" type="submit">
                  <i class="bi bi-send-fill"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const currentUser = {
      id: '<%= currentUser.id %>',
      username: '<%= currentUser.username %>'
    };
  </script>
  <script src="/js/chat.js"></script>
</body>
</html>
